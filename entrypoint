#! /usr/bin/env bash

set -e

RUN_COMMAND="talisker.gunicorn.gevent webapp.app:create_app() --bind $1 --worker-class gevent --workers 2 --name talisker-`hostname`"

if [ "${FLASK_DEBUG}" = true ] || [ "${FLASK_DEBUG}" = 1 ]; then
    RUN_COMMAND="${RUN_COMMAND} --reload --log-level debug --timeout 9999"
fi

# if OTEL_SERVICE_NAME is defined, inject OTEL sdk
if [ -n "${OTEL_SERVICE_NAME}" ]; then
    RUN_COMMAND="${RUN_COMMAND} --config observability/observability.gunicorn.conf.py"
fi

${RUN_COMMAND}
