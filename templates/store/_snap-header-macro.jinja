{% from "store/snap-details/_snap_heading_data.html" import package_header_data %}

{%- macro package_header(
    caller=None) -%}
  {%- set buttons_content = caller('buttons') -%}
  {%- set has_buttons_content = buttons_content|trim|length > 0 -%}

  <div class="p-snap-heading">
    {{ package_header_data(
        package_name=package_name,
        package_title=snap_title,
        icon_url=icon_url,
        developer=developer,
        categories=categories,
        image=image,
        display_name=display_name,
        username=username,
        publisher=publisher,
        developer_validation=developer_validation,
        STAR_DEVELOPER=STAR_DEVELOPER,
        VERIFIED_PUBLISHER=VERIFIED_PUBLISHER
    )}}

    {%- if has_buttons_content -%}
    <div class="p-snap-install-buttons">
      {{ buttons_content }}
    </div>
    {%- endif -%}
  </div>
{%- endmacro -%}