{
  "scripts": {
    "lint-js": "eslint static/js",
    "lint-scss": "sass-lint static/**/*.scss --verbose --no-exit",
    "lint-py": "black --check --line-length 79 tests webapp",
    "test": "yarn run test-python && yarn run test-js-all && yarn run lint-scss",
    "test-js": "jest",
    "test-js-all": "yarn run lint-js && yarn run test-js",
    "test-python": "python3 -m unittest discover tests",
    "build": "yarn run build-js && yarn run build-css",
    "build-css": "node-sass --include-path node_modules static/sass --output static/css && postcss --use autoprefixer --replace 'static/css/**/*.css' && postcss --use cssnano --dir static/minified 'static/css/**/*.css'",
    "build-js": "yarn run copy-3rd-party-js && yarn run build-js-transpile",
    "copy-3rd-party-js": "cp node_modules/d3/build/d3.min.js static/js/modules && cp node_modules/clipboard/dist/clipboard.min.js static/js/modules && cp node_modules/raven-js/dist/raven.min.js static/js/modules",
    "build-js-transpile": "rollup -c",
    "serve": "./entrypoint 0.0.0.0:${PORT}",
    "watch": "watch -p 'static/sass/**/*.scss' -p 'static/js/**/*.js' -c 'yarn run build'",
    "watch-scss": "watch -p 'static/sass/**/*.scss' -c 'yarn run build-css'",
    "watch-js": "watch -p 'static/js/**/*.js' -c 'yarn run build-js'",
    "clean": "rm -rf node_modules yarn-error.log css static/css *.log *.sqlite _site/ build/ .jekyll-metadata .bundle cache.tmp"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.py": [
      "black --line-length 79",
      "git add"
    ]
  },
  "author": "Canonical webteam",
  "dependencies": {
    "autoprefixer": "^6.3.1",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "clipboard": "^2.0.0",
    "cssnano": "^3.10.0",
    "d3": "^4.10.2",
    "d3-array": "^1.2.4",
    "d3-axis": "^1.0.12",
    "d3-format": "^1.3.2",
    "d3-fetch": "^1.1.2",
    "d3-geo": "^1.9.0",
    "d3-scale": "^2.1.2",
    "d3-scale-chromatic": "^1.3.3",
    "d3-selection": "^1.3.2",
    "d3-shape": "^1.2.2",
    "d3-time-format": "^2.1.3",
    "eslint": "^4.18.2",
    "eslint-plugin-jest": "^21.13.0",
    "eslint-plugin-react": "^7.10.0",
    "husky": "^1.0.0-rc.13",
    "jest": "^22.4.2",
    "lint-staged": "^7.2.2",
    "moment": "^2.19.3",
    "node-sass": "^4.5.3",
    "polylabel": "^1.0.2",
    "postcss-cli": "^4.1.0",
    "prettier": "^1.14.2",
    "raven-js": "^3.24.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rollup": "^0.52.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-commonjs": "8.3.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "sass-lint": "^1.10.2",
    "topojson-client": "^3.0.0",
    "vanilla-framework": "^1.7.1",
    "watch-cli": "^0.2.2",
    "whatwg-fetch": "^2.0.4"
  }
}
